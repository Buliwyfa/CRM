  description: "Timerjobs"
schemes:
- "http"

paths:
  /api/database/backup:
    post:
      tags:
      - "Databse"
      summary: "Begin a database backup"
      description: ""
      operationId: "addDatabase"
      consumes:
      - "application/json"
      produces:
      - "application/json"
      parameters:
      - in: "body"
        name: "body"
        description: "backup parameters"
        required: true
        schema:
          type: object
          properties:
          iArchiveType:
            type: "integer"
          bEncyptBackup:
            type: boolean
          password:
            type: string
      responses:
        405:
        description: "Invalid input"
