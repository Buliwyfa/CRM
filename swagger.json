  license:
    name: "MIT"
    url: "https://github.com/ChurchCRM/CRM/blob/master/LICENSE"
host: "petstore.swagger.io"
basePath: "/v2"
tags:
- name: "Database"
  description: "Databse backup and restore"
- name: "Deposits"
  description: "Deposits"
- name: "Events"
  description: "Events"
- name: "Families"
  description: "Families"
